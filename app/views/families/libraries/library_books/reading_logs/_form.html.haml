= simple_form_for([family, library, book, reading_log], url: family_library_library_book_reading_logs_path(book)) do |f|
  = f.error_notification

  .form-inputs
    = f.input :read_on, html5: true, input_html: { max: '9999-12-31' }, autofocus: true
    = f.association :children,
                    collection: @family.children.default_order,
                    as: :check_boxes,
                    item_wrapper_class: 'form-check',
                    input_html: { class: 'form-check-input' },
                    item_label_class: 'form-check-label',
                    hint: '複数選択可能です。'
    = f.input :rating,
              as: :radio_buttons,
              collection: [['😞 よくなかった', 'bad'], ['🙂 ふつう', 'normal'], ['☺️ よかった', 'good']],
              item_wrapper_class: 'form-check',
              input_html: { class: 'btn-check' },
              label_method: :first,
              value_method: :last,
              wrapper_html: { class: 'd-flex justify-content-center flex-wrap gap-2' },
              item_label_class: 'btn btn-outline-primary btn-sm px-3 py-2 rounded-pill'
    = f.input :memo, as: :text, input_html: { rows: 10 }

  .form-actions.text-center
    = f.button :submit, class: 'btn btn-outline-primary me-3'
    = link_to 'キャンセルする', family_library_path(@family), class: 'btn btn-link'
