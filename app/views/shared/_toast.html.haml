- if notice.present? || alert.present?
  .position-fixed.top-0.end-0.m-4.z-1
    .toast.show.align-items-center.border-0{ class: class_names({ 'bg-primary': notice.present?, 'bg-danger': alert.present? }), role: 'alert' }
      .d-flex
        .toast-body.text-white
          - if notice
            = notice
          - else
            = alert
          %button.btn-close.btn-close-white.me-2.m-auto{ 'data-bs-dismiss': 'toast', type: 'button' }
