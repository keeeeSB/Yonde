.row.justify-content-center
  .col-md-6
    %h2.text-center.mb-3 ユーザー編集

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name, required: true, autofocus: true
        = f.input :email, required: true

        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p.text-warning
            Currently waiting confirmation for: #{resource.unconfirmed_email}

        = f.input :current_password,
                  hint: '変更を確定するには現在のパスワードが必要です',
                  required: true,
                  input_html: { autocomplete: 'current-password' }

        - if f.object.profile_image.attached? && f.object.profile_image.persisted?
          = f.input :profile_image,
                    as: :hidden,
                    input_html: { value: f.object.profile_image.signed_id }

        = f.input :profile_image,
                  as: :file,
                  input_html: { direct_upload: true }

      .form-actions.text-center.mt-3
        = f.button :submit, '更新する', class: 'btn btn-primary'

    .text-center.mt-2
      = link_to 'キャンセルする', :back, class: 'btn btn-link'
